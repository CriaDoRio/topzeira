//cire duas pirÃ¢mides
#include <stdio.h>

int piramide(int n) {
    int i, j;

    for(i = 0; i < n; i++) {
        for(j = 0; j < n - i - 1; j++) {
            printf(" ");
        }
        for(j = 0; j < 2 * i + 1; j++) {
            printf("X");
        }
        printf("\n");
    }

    return 0;
}

int piramide_invertida(int n) {
    int i, j;

    for(i = n; i > 0; i--) {
        for(j = 0; j < n - i; j++) {
            printf(" ");
        }
        for(j = 0; j < 2 * i - 1; j++) {
            printf("X");
        }
        printf("\n");
    }

    return 0;
}

int main() {
    int altura;

    printf("Digite a altura da piramide: \n");
    scanf("%d", &altura);

    piramide(altura);
    piramide_invertida(altura);

    return 0;
}
