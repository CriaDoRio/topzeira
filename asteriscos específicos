{
    setlocale(LC_ALL, "Portuguese");
     ImprimeLinha();
     printf("Ol√° mundo!");
     ImprimeLinha();
}
ImprimeLinha(){
int i, qtd = 20;
printf ("\n");
for (i=1; i<=qtd; i++){
    printf("*");
}
printf("\n");

}
